#!/usr/bin/env bash
# kubctl-0x03 â€” helper to apply the blue deployment manifest
# Run this script from inside the `messaging_app/` directory:
#   ./kubctl-0x03

set -e
KUBE_FILE="blue_deployment.yaml"
if [ ! -f "$KUBE_FILE" ]; then
  echo "Error: $KUBE_FILE not found in $(pwd)"
  exit 2
fi
kubectl apply -f "$KUBE_FILE"
